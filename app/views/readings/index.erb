  <div class="col-lg-12">
    <h1>Readings</h1>
    <form action="/readings" method="GET">
      Start: <input type="datetime" name="start" value="<%= @start.strftime("%Y%m%d") %>" class="datepicker">
      End: <input type="datetime" name="end" value="<%= @end.strftime("%Y%m%d") %>" class="datepicker">
      <input type="submit">
    </form>
    <canvas id="tempChart" width="800" height="350"></canvas>
  </div>
</div>
<div class="row">
  <div class="col-lg-10">
    <table>
    <tr>
      <th>Date</th>
      <th>Indoor</th>
      <th>Outhoor</th>
      <th>State</th>
    </th>
    <% @readings.each do |reading| %>
    <tr>
      <td><%= reading.date.strftime('%d-%b %H:%M') %></td>
      <td><%= reading.indoor_temperature.round(1).to_s %></td>
      <td><%= reading.outdoor_temperature.round(1).to_s %></td>
      <td><%= yes_no(reading.status) unless reading.status.nil? %></td>
    </tr>
    <% end %>
    </table>
  </div>
</div>

<script>
    var ctx = document.getElementById("tempChart");
    var tempChart = new Chart(ctx, {
        type: 'line',
        animation:{
            animateScale: false
        },
        data: {
            labels: [ "<%= @readings.map {|d| d.date.strftime("%d-%b %H:%M")}.join("\", \"") %>" ],
            datasets: [{
                label: 'Indoor',
                type: 'line',
                backgroundColor: 'rgba( 255, 96, 120, 1)',
                borderColor:     'rgba( 255, 96, 120, 1)',
                data: [ "<%= @readings.map(&:indoor_temperature).join("\", \"") %>" ],
                yAxisID: 'A',
                borderWidth: 1,
                pointRadius: 2,
                showLine: true,
                fill: false
              },
              {
                label: 'Outdoor',
                type: 'line',
                backgroundColor: 'rgba(  81, 125, 255, 1)',
                borderColor:     'rgba(  81, 125, 255, 1)',
                data: [ "<%= @readings.map(&:outdoor_temperature).join("\", \"") %>" ],
                yAxisID: 'A',
                borderWidth: 1,
                pointRadius: 2,
                showLine: true,
                fill: false
              },
              {
                label: 'State',
                type: 'line',
                backgroundColor: 'rgba(  234, 234, 234, 0.8)',
                borderColor:     'rgba(  234, 234, 234, 1)',
                data: [ "<%= @readings.map(&:status).map(&:to_i).join("\", \"") %>" ],
                yAxisID: 'B',
                borderWidth: 1,
                pointStyle: 'circle',
                pointRadius: 0,
                showLine: true,
                fill: true,
                steppedLine: true
              }
            ]
        },
        options: {
            responsive: true,
            title:{
              display:true,
              text:'Temperature Readings'
            },
            legend: {
            display: true,
            labels: {
              fontColor: 'rgb(255, 99, 132)'
             }
            },
            scales: {
              xAxes: [{
                display: true,
                scaleLabel: {
                  display: true,
                  labelString: 'Date'
                },
                ticks: {
                  minRotation: 45,
                  maxRotation: 45
                }
              }],
              yAxes: [{
                id: 'A',
                position: 'left',
                display: true,
                scaleLabel: {
                  display: true,
                  labelString: "Deg C",
                },
                ticks: {
                  beginAtZero:true
                }
              },
              {
                id: 'B',
                position: 'right',
                display: true,
                scaleLabel: {
                  display: true,
                  labelString: "State",
                },
                stepped: true,
                ticks: {
                  max: 1,
                  min: 0,
                  stepSize: 1                  
                }
              }
              ]
            }
        }
    });
</script>
